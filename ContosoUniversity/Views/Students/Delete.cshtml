@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h4>Are you sure you want to delete this student?</h4>
<div>
    <hr />
    
    @*Partial view here*@
    <partial name="_StudentDetails" model="@Model" />

    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="StudentID" />
        <input type="hidden" asp-for="LastName" />
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a asp-controller="Students" asp-action="Index"    
           class="btn btn-outline-primary">Back to List</a>
    </form>

</div>


